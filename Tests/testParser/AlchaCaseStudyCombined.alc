group Packet{
  net         SoP;
  net         EoP;
  net(13, -1) Data;
  net         Valid = 0;
}

AddDebug(Packet.SoP);
AddDebug(Packet.EoP);
AddDebug(Packet.Valid);

private net(12) n;
private num     N = 2500;

fsm(DspClock, MasterReset){
  loop{
    n = 0,
    Packet.Valid = 0,
    while(!PacketTrigger_DSP);
    ;

    while(n < N){
      Packet.SoP    = (n == 0),
      Packet.EoP    = (n == N-1),
      Packet.Data  := :(~ADC.Output.Data(13), ADC.Output.Data(12..0)),
      Packet.Valid  = ADC.Output.Valid,
      if(ADC.Output.Valid) n++,
      ;
    }
  }
}
